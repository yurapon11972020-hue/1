  <script>
    (function() {
      const splash = document.getElementById('splashScreen');
      const card = document.getElementById('mainCard');
      const pulseSticker = document.getElementById('pulseSticker');

      let isTransitioning = false;

      // ----- –§–ò–ó–ò–ß–ù–´–ô –í–´–õ–ï–¢ –°–¢–ò–ö–ï–†–û–í –ò–ó –ö–û–ù–í–ï–†–¢–ê -----
      function explodeHeartsFromSticker() {
        const rect = pulseSticker.getBoundingClientRect();
        const centerX = rect.left + rect.width / 2;
        const centerY = rect.top + rect.height / 2;

        const heartEmojis = ['‚ù§Ô∏è', 'üíñ', 'üíò', 'üíù', 'üíó', 'üíì', 'üíï', 'üíû', '‚ù£Ô∏è', '‚ô•Ô∏è', 'üíå', '‚ù§Ô∏è‚Äçüî•'];
        const count = 45; // –µ—â—ë –±–æ–ª—å—à–µ —Å—Ç–∏–∫–µ—Ä–æ–≤

        for (let i = 0; i < count; i++) {
          const heart = document.createElement('div');
          heart.textContent = heartEmojis[Math.floor(Math.random() * heartEmojis.length)];
          heart.className = 'fly-heart';
          
          // –°–ª—É—á–∞–π–Ω–∞—è —Ñ–∏–∑–∏–∫–∞: –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ, –¥–∞–ª—å–Ω–æ—Å—Ç—å, –≤—Ä–∞—â–µ–Ω–∏–µ
          const angle = Math.random() * 2 * Math.PI;
          const distance = 100 + Math.random() * 300;
          const x = Math.cos(angle) * distance;
          const y = Math.sin(angle) * distance * 0.6 + 50; // —Å –≥—Ä–∞–≤–∏—Ç–∞—Ü–∏–æ–Ω–Ω—ã–º —ç—Ñ—Ñ–µ–∫—Ç–æ–º (—Å–º–µ—â–µ–Ω–∏–µ –≤–Ω–∏–∑)
          
          // –°–ª—É—á–∞–π–Ω—ã–µ —É–≥–ª—ã –ø–æ–≤–æ—Ä–æ—Ç–∞ –Ω–∞ —Ä–∞–∑–Ω—ã—Ö —ç—Ç–∞–ø–∞—Ö –∞–Ω–∏–º–∞—Ü–∏–∏
          const rot1 = (Math.random() * 180 - 90) + 'deg';
          const rot2 = (Math.random() * 360 - 180) + 'deg';
          const rot3 = (Math.random() * 720 - 360) + 'deg';
          
          heart.style.setProperty('--x', x + 'px');
          heart.style.setProperty('--y', y + 'px');
          heart.style.setProperty('--rot1', rot1);
          heart.style.setProperty('--rot2', rot2);
          heart.style.setProperty('--rot3', rot3);
          
          heart.style.left = centerX + 'px';
          heart.style.top = centerY + 'px';
          
          // –°–ª—É—á–∞–π–Ω—ã–π —Ä–∞–∑–º–µ—Ä
          const size = 24 + Math.floor(Math.random() * 40);
          heart.style.fontSize = size + 'px';
          
          // –°–ª—É—á–∞–π–Ω—ã–π —Ü–≤–µ—Ç –≤ —Ä–æ–∑–æ–≤–æ–π –≥–∞–º–º–µ
          const hue = 340 + Math.floor(Math.random() * 20);
          heart.style.color = `hsl(${hue}, 75%, 70%)`;
          
          document.body.appendChild(heart);
          
          setTimeout(() => { heart.remove(); }, 1500);
        }
      }

      // ----- –ö–õ–ò–ö –ü–û –ó–ê–°–¢–ê–í–ö–ï: –í–ó–†–´–í –ò –û–¢–ö–†–´–¢–ò–ï -----
      splash.addEventListener('click', function(e) {
        if (isTransitioning) return;
        isTransitioning = true;

        // –§–µ–π–µ—Ä–≤–µ—Ä–∫ –ü–†–Ø–ú–û –ò–ó –ö–û–ù–í–ï–†–¢–ê
        explodeHeartsFromSticker();

        // –ù–µ–º–Ω–æ–≥–æ –∑–∞–¥–µ—Ä–∂–∫–∏ -- –∏ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –æ—Ç–∫—Ä—ã—Ç–∫—É (–∑–∞—Å—Ç–∞–≤–∫–∞ –∏—Å—á–µ–∑–∞–µ—Ç)
        setTimeout(() => {
          splash.classList.add('hidden');
          card.classList.add('visible');
          isTransitioning = false;
        }, 300); // –ø–æ—á—Ç–∏ —Å—Ä–∞–∑—É, —á—Ç–æ–±—ã –Ω–µ –∂–¥–∞—Ç—å
      });

      // ----- –°–ï–†–î–ï–ß–ö–ò –ü–û –ö–õ–ò–ö–£ (–ö–†–û–ú–ï –ó–ê–°–¢–ê–í–ö–ò) -----
      document.body.addEventListener('click', function(e) {
        if (e.target.closest('.splash')) {
          return; // –Ω–µ –º–µ—à–∞–µ–º –≤–∑—Ä—ã–≤—É
        }
        const heartEmojis = ['‚ù§Ô∏è','üíñ','üíò','üíù','üíó'];
        const heart = document.createElement('div');
        heart.textContent = heartEmojis[Math.floor(Math.random() * heartEmojis.length)];
        heart.style.position = 'fixed';
        heart.style.left = (e.clientX - 16) + 'px';
        heart.style.top = (e.clientY - 16) + 'px';
        heart.style.fontSize = (24 + Math.floor(Math.random() * 20)) + 'px';
        heart.style.color = '#ff8a9c';
        heart.style.pointerEvents = 'none';
        heart.style.zIndex = '9999';
        heart.style.opacity = '0.7';
        heart.style.animation = 'floatUp 1.5s ease-out forwards';
        document.body.appendChild(heart);
        setTimeout(() => { heart.remove(); }, 1500);
      });
    })();
  </script>
</body>
